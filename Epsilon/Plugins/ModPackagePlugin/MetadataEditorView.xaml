<UserControl
    x:Class="ModPackagePlugin.MetadataEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ModPackagePlugin"
    Padding="4"
    BorderBrush="#3F3F46"
    BorderThickness="1"
    Foreground="#f1f1f1">
    <Grid>
        <StackPanel>
            <TextBlock
                Margin="0,2"
                Text="Name" />
            <TextBox
                Margin="0,2"
                MaxLength="15"
                Text="{Binding Metadata.Name, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="0,2"
                Text="Author" />
            <TextBox
                Margin="0,2"
                MaxLength="15"
                Text="{Binding Metadata.Author, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="0,2"
                Text="Description" />
            <TextBox
                Height="100"
                Margin="0,2"
                MaxLength="127"
                MaxLines="4"
                Text="{Binding Metadata.Description, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
        </StackPanel>

    </Grid>
</UserControl>
