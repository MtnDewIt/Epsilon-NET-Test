<SyntaxDefinition name="Scheme" extensions=".sls;.sps;.ss;.scm"
  xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">

  <Color foreground="#569CD6" name="Keyword" />
  <Color foreground="#CE9178" name="String" />
  <Color foreground="#B5CEA8" name="NumberLiteral" />
  <Color foreground="#569CD6" name="Constant" />
  <Color foreground="#D4D4D4" name="Parenthesis" />
  <Color foreground="#6A9955" name="Comment" />
  <Color foreground="#4EC9B0" name="Type" />
  <Color foreground="#C586C0" name="Special" />

  <RuleSet ignoreCase="false">

    <Span color="String">
      <Begin>"</Begin>
      <End>"</End>
      <RuleSet>
        <!-- span for escape sequences -->
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>

    <Span color="String">
      <Begin>'</Begin>
      <End>'</End>
      <RuleSet>
        <!-- span for escape sequences -->
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>

    <Keywords color="Constant">
      <Word>true</Word>
      <Word>false</Word>
      <Word>none</Word>
    </Keywords>

    <Keywords color="Keyword">
      <Word>script</Word>
      <Word>global</Word>
    </Keywords>

    <Keywords color="Keyword">
      <Word>begin</Word>
      <Word>begin_random</Word>
      <Word>if</Word>
      <Word>cond</Word>
      <Word>set</Word>
      <Word>and</Word>
      <Word>or</Word>
      <Word>min</Word>
      <Word>max</Word>
      <Word>sleep</Word>
      <Word>sleep_forever</Word>
      <Word>sleep_until</Word>
      <Word>wake</Word>
      <Word>inspect</Word>
      <Word>not</Word>
      <Word>print</Word>
    </Keywords>

    <Keywords color="Keyword">
      <Word>static</Word>
      <Word>dormant</Word>
      <Word>continuous</Word>
      <Word>startup</Word>
    </Keywords>

    <Keywords color="Special">
      <Word>extern</Word>
    </Keywords>

    <Keywords color="Type">
      <Word>unparsed</Word>
      <Word>specialform</Word>
      <Word>functionname</Word>
      <Word>passthrough</Word>
      <Word>void</Word>
      <Word>boolean</Word>
      <Word>real</Word>
      <Word>short</Word>
      <Word>long</Word>
      <Word>string</Word>
      <Word>script</Word>
      <Word>stringid</Word>
      <Word>unitseatmapping</Word>
      <Word>triggervolume</Word>
