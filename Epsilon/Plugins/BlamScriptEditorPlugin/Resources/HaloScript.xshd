    <Rule color="NumberLiteral">
      \b\d+(\.[0-9]+)?\b
    </Rule>

    <Rule color="Parenthesis">
      [\(\)]+
    </Rule>

    <Span color="Comment" fontStyle="italic">
      <Begin>;</Begin>
    </Span>

  </RuleSet>

</SyntaxDefinition>