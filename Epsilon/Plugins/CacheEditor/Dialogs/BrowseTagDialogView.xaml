<controls:ChromeWindow
    x:Class="CacheEditor.BrowseTagDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:controls="clr-namespace:EpsilonLib.Controls;assembly=EpsilonLib"
    Title="Browse Tags"
    Width="700"
    Height="500"
    Padding="4"
    Background="#2d2d30">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image
            Margin="4">
            <Image.Style>
                <Style TargetType="Image" BasedOn="{StaticResource EpsilonIcon}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding UseNativeTitleBar, RelativeSource={RelativeSource AncestorType={x:Type controls:ChromeWindow}}}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <TextBlock
            Text="{Binding DisplayName}">
            <TextBlock.Style>
                <Style TargetType="TextBlock" BasedOn="{StaticResource EpsilonTitle}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding UseNativeTitleBar, RelativeSource={RelativeSource AncestorType={x:Type controls:ChromeWindow}}}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        
        <ContentControl
            Grid.Row="1"
            s:View.Model="{Binding TagTree}"
            Margin="8,8,8,8"/>
        
    </Grid>
</controls:ChromeWindow>
