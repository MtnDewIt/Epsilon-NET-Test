<Window
    x:Class="CacheEditor.Views.RenameTagDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CacheEditor.Views"
    xmlns:s="https://github.com/canton7/Stylet"
    Title="{Binding DisplayName}"
    Width="400"
    Height="150"
    Background="#2d2d30"
    Foreground="#f1f1f1">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock
                Margin="4"
                Text="{Binding Message}" />
            <TextBox
                Margin="4"
                Text="{Binding Name}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Height="24"
                Click="{s:Action Confirm}"
                Content="OK" />
            <Button
                Width="75"
                Height="24"
                Margin="4,0,0,0"
                Click="{s:Action Cancel}"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
