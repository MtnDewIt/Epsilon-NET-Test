<Window x:Class="TagStructEditor.GotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagStructEditor"
        mc:Ignorable="d"
        Title="Go To Index" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        Background="#2d2d30"
        Foreground="#f1f1f1">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="8">
            <TextBlock x:Name="label">Goto Index:</TextBlock>
            <TextBox x:Name="txtInput" Width="200" Margin="0,2,0,0" KeyUp="txtInput_KeyUp" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,4">
                <Button x:Name="btnOK" Width="60" Padding="0" Click="btnOK_Click">OK</Button>
                <Button x:Name="btnCancel" Width="60" Margin="2,0,0,0" Click="btnCancel_Click">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
